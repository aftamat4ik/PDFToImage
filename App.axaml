<Application
    x:Class="PDFToImage.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFToImage"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Citrus.Avalonia/Citrus.xaml" />

        <!--  To use other themes:  -->
        <!-- <StyleInclude Source="avares://Citrus.Avalonia/Sea.xaml"/> -->
        <!-- <StyleInclude Source="avares://Citrus.Avalonia/Rust.xaml"/> -->
        <!-- <StyleInclude Source="avares://Citrus.Avalonia/Candy.xaml"/> -->
        <!-- <StyleInclude Source="avares://Citrus.Avalonia/Magma.xaml" /> -->
        <StyleInclude Source="avares://Citrus.Avalonia/Candy.xaml" />
        <StyleInclude Source="avares://UVtools.AvaloniaControls/Controls.axaml" />
        <StyleInclude Source="/CommonStyleResources.axaml" />
        <StyleInclude Source="/CommonStyles.axaml" />
    </Application.Styles>
</Application>