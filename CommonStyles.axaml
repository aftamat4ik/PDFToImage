<!--  this is common style overrides that affect controls with specific filters  -->
<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!--  Add Controls for Previewer Here  -->
        </Border>
    </Design.PreviewWith>

    <!--  Add Styles Here  -->
    <!--  selectors works almost like in css  -->
    <!--  https://docs.avaloniaui.net/docs/reference/styles/style-selector-syntax  -->
    <!--  also we can filter by pseudoclasses e.g. :Button.red:pointerover - https://docs.avaloniaui.net/docs/reference/styles/pseudo-classes  -->
    <Style Selector=":is(Control).offset10">
        <Setter Property="Margin" Value="{DynamicResource Margin10}" />
    </Style>
    <Style Selector=":is(Control).offset10_rl">
        <Setter Property="Margin" Value="{DynamicResource Margin10RL}" />
    </Style>

    <!--  Applies separation to all child elements with given class  -->
    <Style Selector=".separation5 > :is(Control)">
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector=":is(TextBlock)">
        <Setter Property="FontFamily" Value="{DynamicResource GawaaRegular}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
    </Style>
    <Style Selector="TextBlock.header">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
    </Style>
</Styles>
