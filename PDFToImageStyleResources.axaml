<!--  this is just common style related variables  -->
<Style
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard">
    <Style.Resources>
        <Thickness x:Key="Margin10">10,10,10,10</Thickness>
        <Thickness x:Key="Margin10RL">10,0,10,0</Thickness>
        <FontFamily x:Key="GawaaRegular">/Assets/Fonts#Gawaa Regular</FontFamily>

        <!--  font size overrides  -->
        <x:Double x:Key="FontSizeSmall">15</x:Double>
        <x:Double x:Key="FontSizeNormal">18</x:Double>
        <x:Double x:Key="FontSizeLarge">32</x:Double>
    </Style.Resources>
</Style>